<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">#ffff</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="mytoast">
        <item name="textBold">true</item>
        <item name="textColor">#fff</item>
        <item name="textSize">14sp</item>
        <item name="colorBackground">#800000</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#ffff</item>

        <item name="length">LONG</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
</style>
    <style name="ArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">

        <item name="color">@android:color/white</item>
    </style>

</resources>