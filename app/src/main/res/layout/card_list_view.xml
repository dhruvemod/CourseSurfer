<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/cardView"
        android:elevation="8dp"
        android:clipToPadding="false"
        app:cardCornerRadius="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardTitleView"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textMain"
                android:text="Introduction to Java Programming"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cardAuthorsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textSec"
                android:layout_marginLeft="4dp"
                android:text="Jacob Java and Hermon Berwan"

                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/CardCourseCompanyView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/titleView"
                android:layout_below="@+id/titleView"
                android:textColor="@color/moreSec"
                android:singleLine="true"
                android:layout_marginLeft="4dp"
                android:text="Coursera"

                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/CardCourseProvider"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:textColor="@color/moreSec"
                android:layout_marginBottom="4dp"
                android:text="Microsoft"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CardUniversityProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/moreSec"
                android:layout_marginBottom="4dp"
                android:text="Utah University" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:textColor="@color/moreSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"

                    android:text="Certication:" />

                <TextView
                    android:id="@+id/CardCertificationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/moreSec"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:text="$99 Available" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/cardweeksView"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="4dp"
                    android:background="@android:color/black"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="7 weeks long"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/cardhoursView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/weeksView"
                    android:layout_alignBottom="@+id/weeksView"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/universityProvider"
                    android:background="@android:color/holo_blue_light"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="6-8 hours per week"
                    android:textColor="@android:color/white" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>